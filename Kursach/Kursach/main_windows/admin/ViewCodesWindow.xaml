
<Window x:Class="Kursach.main_windows.ViewCodesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мои коды доступа" Height="400" Width="600"
        Background="#FF2D2D30" Foreground="White"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Мои коды доступа:" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,20,0,0"/>

        <DataGrid x:Name="CodesDataGrid" AutoGenerateColumns="False" 
                  Background="#FF3C3C3C" Foreground="Black" 
                  Margin="20,60,20,20" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="*"/>
                <DataGridTextColumn Header="Код" Binding="{Binding Code}" Width="*"/>
                <DataGridTextColumn Header="Дата создания" Binding="{Binding CreatedAt}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>